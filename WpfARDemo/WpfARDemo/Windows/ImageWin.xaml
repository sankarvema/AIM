<Window x:Class="WpfARDemo.ImageWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImageWin" Height="300" Width="300" Loaded="ImageWinLoaded" WindowStyle="None" Background="#00000000" AllowsTransparency="True">
    <Grid>
        <Image Height="261" HorizontalAlignment="Left" Name="image1" Source="{Binding ImagePath}"
               Stretch="UniformToFill" VerticalAlignment="Top" Width="278" />
    </Grid>
</Window>
